            <div class="form-group">
                <label asp-for="ComponentType.Manufacturer" class="control-label"></label>
                <input asp-for="ComponentType.Manufacturer" class="form-control" />
                <span asp-validation-for="ComponentType.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.WikiLink" class="control-label"></label>
                <input asp-for="ComponentType.WikiLink" class="form-control" />
                <span asp-validation-for="ComponentType.WikiLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.AdminComment" class="control-label"></label>
                <input asp-for="ComponentType.AdminComment" class="form-control" />
                <span asp-validation-for="ComponentType.AdminComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                <select asp-for="SelectedCategories" multiple="multiple" asp-items="Model.Categories" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
