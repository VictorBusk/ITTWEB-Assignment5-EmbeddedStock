@using EmbeddedStock.Models.Enums;

@model EmbeddedStock.ViewModels.ComponentTypeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Component Types</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ComponentType.ComponentTypeId" />
            <div class="form-group">
                <label asp-for="ComponentType.Name" class="control-label"></label>
                <input asp-for="ComponentType.Name" class="form-control" />
                <span asp-validation-for="ComponentType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.Info" class="control-label"></label>
                <input asp-for="ComponentType.Info" class="form-control" />
                <span asp-validation-for="ComponentType.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.Location" class="control-label"></label>
                <input asp-for="ComponentType.Location" class="form-control" />
                <span asp-validation-for="ComponentType.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.Status" class="control-label"></label>
                <select asp-for="ComponentType.Status" asp-items="Html.GetEnumSelectList<ComponentStatus>()" class="form-control"></select>
                <span asp-validation-for="ComponentType.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.Datasheet" class="control-label"></label>
                <input asp-for="ComponentType.Datasheet" class="form-control" />
                <span asp-validation-for="ComponentType.Datasheet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentType.ImageUrl" class="control-label"></label>
